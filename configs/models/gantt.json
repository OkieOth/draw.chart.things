{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Gantt",
    "description": "Model to describe the input of gantt diagrams",
    "x-domain": "input",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Title of the document"
        },
        "groups": {
            "description": "List of groups to be displayed in the gantt chart",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Group"
            },
            "minItems": 1
        },
        "events": {
            "description": "List of events to be displayed in the gantt chart",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Event"
            }
        },
        "formats": {
            "$comment": "if the map contains an key 'default' it will be used as default format",
            "description": "Map of formats available to be used in the gantt chart",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/Format"
            }
        }
    },
    "required": ["title", "groups"],
    "definitions": {
        "Group": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "Text to name the group",
                    "type": "string"
                },
                "start": {
                    "description": "Start date when the group is active",
                    "type": "string",
                    "format": "date-time"
                },
                "end": {
                    "description": "Start date when the group is active",
                    "type": "string",
                    "format": "date-time"
                },
                "entries": {
                    "description": "List of entries in the group",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Entry"
                    },
                    "minItems": 1
                }
            },
            "required": ["name"]
        },
        "Entry": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "Text to name the entry",
                    "type": "string"
                },
                "start": {
                    "description": "Start date when the entry is active",
                    "type": "string",
                    "format": "date-time"
                },
                "startsAfter": {
                    "description": "Start, relative to the start of another entry from a group",
                    "$ref": "#/definitions/RelativeStart"
                },
                "end": {
                    "description": "End date when the entry is active",
                    "type": "string",
                    "format": "date-time"
                },
                "duration": {
                    "description": "Duration of the entry in days",
                    "type": "integer"
                },
                "description": {
                    "description": "Description of the entry",
                    "type": "string"
                },
                "resources": {
                    "description": "List of resources assigned to the entry",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["name"]
        },
        "RelativeStart": {
            "type": "object",
            "properties": {
                "groupRef": {
                    "description": "Optional, name of the group where the start of the entry depends on",
                    "type": "string"
                },
                "entryRef": {
                    "description": "Name of the entry, that end defines the start of this entry",
                    "type": "string"
                }
            },
            "required": ["entryRef"]
        },
        "Event": {
            "type": "object",
            "description": "an event that is displayed in the gantt chart and has references to specific group entries",
            "properties": {
                "date": {
                    "description": "Date of the event",
                    "type": "string",
                    "format": "date-time"
                },
                "text": {
                    "description": "Text to display for the event",
                    "type": "string"
                },
                "description": {
                    "description": "Description of the event",
                    "type": "string"
                },
                "entryRefs": {
                    "description": "List of references to entries in groups that are affected by the event",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/EntryRef"
                    }
                }
            },
            "required": ["date", "text"]
        },
        "EntryRef": {
            "type": "object",
            "properties": {
                "groupRef": {
                    "description": "Name of the group where the start of the entry depends on",
                    "type": "string"
                },
                "entryRef": {
                    "description": "Name of the entry, that end defines the start of this entry",
                    "type": "string"
                }
            },
            "required": ["entryRef"]
        },
        "Format": {
            "type": "object",
            "properties": {
                "font": {
                    "$ref": "./formats.json#/definitions/FontDef"
                },
                "groupFont": {
                    "$ref": "./formats.json#/definitions/FontDef"
                },
                "entryFont": {
                    "$ref": "./formats.json#/definitions/FontDef"
                },
                "eventFont": {
                    "$ref": "./formats.json#/definitions/FontDef"
                },
                "entryFill": {
                    "$ref": "./formats.json#/definitions/FillDef"
                }
            }
        }
   }
}