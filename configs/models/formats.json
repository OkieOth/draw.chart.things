{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Formats",
    "description": "Some types to define base formats",
    "type": "object",
    "x-domain": "base",
    "definitions": {
        "FontDef": {
            "type": "object",
            "description": "Defines the font a text",
            "properties": {
                "size": {
                    "type": "integer"
                },
                "font": {
                    "type": "string",
                    "example": "sans, sans-serif, monospace"
                },
                "type": {
                    "enum": ["normal", "italic"]
                },
                "weight": {
                    "enum": ["normal", "bold"]
                },
                "lineHeight": {
                    "type": "number",
                    "format": "float",
                    "description": "Line height of the box"
                },
                "color": {
                    "type": "string"
                },
                "aligned": {
                    "enum": ["left", "center", "right"]
                },
                "spaceTop": {
                    "type": "integer"
                },
                "spaceBottom": {
                    "type": "integer"
                },
                "maxLenBeforeBreak": {
                    "type": "integer",
                    "description": "Maximum length of the text before it breaks"
                },
                "anchor": {
                    "enum": ["middle", "left", "right"]
                }
            },
            "required": ["size", "font", "lineHeight", "color", "spaceTop", "spaceBottom", "maxLenBeforeBreak", "anchor"]
        },
        "LineDef": {
            "type": "object",
            "description": "Defines how the border of the box looks like",
            "properties": {
                "width": {
                    "type": "number"
                },
                "style": {
                    "enum": ["solid", "dotted", "dashed"]
                },
                "color": {
                    "type": "string"
                },
                "opacity": {
                    "type": "number"
                }
            }
        },
        "FillDef": {
            "type": "object",
            "description": "Defines the fill of the box",
            "properties": {
                "color": {
                    "type": "string"
                },
                "opacity": {
                    "type": "number"
                }
            }
        }
    }
}
